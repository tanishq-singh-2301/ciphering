{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "lib/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "example",
    "dist"
  ],
}